[build-system]
requires = [ "poetry>=0.12",]
build-backend = "poetry.masonry.api"

[tool.poetry]
name = "[[python_package_import_name]]"
version = "0.0.3"
description = "project_description"
authors = "[[author_user_name]] <[[author_email]]>"

[tool.poetry.dependencies]
python = "^3.8"
simpletransformers = "^0.60.6"
coloredlogs = "^15.0"
PyYAML = "5.4.1"
dialogy = "^0.2.1"
scikit-learn = "^0.24.1"
pandas = "^1.2.2"
numpy = "^1.20.1"
seqeval = "^1.2.2"
Flask = "^1.1.2"
attrs = "^20.3.0"
toml = "^0.10.2"

[tool.poetry.dev-dependencies]
tqdm = "^4.56.1"
stockholm-data-manager = "^0.14.1"
stockholm-aws-train = "^0.1.0"
semver = "^2.13.0"
docopt = "^0.6.2"
pylint = "^2.6.0"
mypy = "^0.800"
black = "^20.8b1"
pytest = "^6.2.2"
pytest-cov = "^2.11.1"
GitPython = "^3.1.13"
prompt-toolkit = "^3.0.16"

[tool.poetry.scripts]
dialogy = "[[python_package_import_name]].dev.cli:main"

[tool.poetry.dependencies.sentry-sdk]
extras = [ "flask",]
version = "^0.19.5"

[tool.poetry.dev-dependencies.dvc]
extras = [ "s3",]
version = "^1.11.16"
